# Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# Google Gemini AI Configuration
VITE_GEMINI_API_KEY=your-gemini-api-key

# Google Maps API Configuration (for warehouse locator)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Optional: Enable blockchain features (default: false)
VITE_ENABLE_BLOCKCHAIN=false

# Optional: Enable debug mode (default: false)
VITE_DEBUG_MODE=false

# Blockchain Configuration (if using blockchain features)
# These are used by the Backend + Blockchain + NFT module

# Pinata IPFS Configuration
PINATA_API_KEY=your-pinata-api-key
PINATA_API_SECRET=your-pinata-secret-key

# Blockchain Network Configuration
RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/your-api-key
PRIVATE_KEY=your-wallet-private-key-for-deployment
CHAIN_ID=80002
CONTRACT_ADDRESS=deployed-contract-address

# Rust Backend Configuration (for offchain services)
PORT=3000
HOST=0.0.0.0
ENVIRONMENT=development